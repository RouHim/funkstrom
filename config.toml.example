[server]
port = 8284
bind_address = "127.0.0.1"

[library]
music_directory = "/path/to/music"
shuffle = true
repeat = true

[station]
station_name = "My Radio Station"
description = "Great music 24/7"
genre = "Various"
url = "http://localhost:8284"

[stream]
bitrate = 128
format = "mp3"
sample_rate = 44100
channels = 2

[ffmpeg]
path = "/usr/bin/ffmpeg"

[[schedule.programs]]
name = "Morning Show"
active = false
cron = "0 6 * * 1-5"
duration = "3h"
playlist = "/path/to/playlists/morning.m3u"

[[schedule.programs]]
name = "Evening Jazz"
active = false
cron = "0 19 * * *"
duration = "2h"
playlist = "/path/to/playlists/jazz.m3u"